</div>
    
</div>
        <div class="col-sm-9 col-md-10">
            <!-- Nav tabs -->

            <ul id="emailist">
            <% @emails.each do |email|%>
              <div id = "em<%=email.id%>">
            <%= link_to email_path(email.id), remote: true, class:"list-group-item" do%>

                    <input type="checkbox">
          <% if email.status == false %>
              <b><%= email.object %> -</b>
             <small> <%= email.body[0,100] %></small>
          
          <% else %>
          <%= email.object %> -
          <small> <%= email.body[0,100] %></small><% end %>



              <% end %></div><%end%></ul>







            </div>
            
        </div>

    </div>






    
